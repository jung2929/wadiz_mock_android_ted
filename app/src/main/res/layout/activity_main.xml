<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".src.main.MainActivity">

    <RelativeLayout
        android:id="@+id/main_rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/main_btn_wadiz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@color/clear"
            android:fontFamily="@font/nanumbarungothicbold"
            android:gravity="bottom"
            android:src="@drawable/logo"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/main_ib_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/main_ib_notification"
            android:background="@color/clear"
            android:scaleType="centerInside"
            android:src="@drawable/search">

        </ImageButton>

        <ImageButton
            android:id="@+id/main_ib_notification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/clear"
            android:scaleType="centerInside"
            android:src="@drawable/notification" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/main_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_rl_footer"
        android:layout_below="@id/main_rl_titlebar"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/main_rl_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/customborder"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_btn_footer_reward"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/clear"
                android:drawableTop="@drawable/gift_click"
                android:fontFamily="@font/nanumbarungothic"
                android:textColor="@color/black"
                android:text="리워드"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_btn_footer_investment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/clear"
                android:drawableTop="@drawable/investment_nonclick"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="투자"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/main_btn_footer_home"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/clear"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/home_nonclick"
                android:fontFamily="@font/nanumbarungothic"
                android:text="홈"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/main_btn_footer_mypage"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/clear"
                android:drawableTop="@drawable/my_nonclick"
                android:fontFamily="@font/nanumbarungothic"
                android:text="MY"
                android:layout_gravity="bottom"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/main_btn_footer_more"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/clear"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/more_nonclick"
                android:fontFamily="@font/nanumbarungothic"
                android:text="더보기"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>