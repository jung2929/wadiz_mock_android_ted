<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/join_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/customborder_sideline"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/join_ib_back"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/clear"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:fontFamily="@font/nanumbarungothic"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/join_ib_home"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/clear"
            android:scaleType="centerInside"
            android:src="@drawable/home" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/join_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/join_footer"
        android:layout_below="@+id/join_title" />


    <LinearLayout
        android:id="@+id/join_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/customborder_sideline"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="이미 와디즈 계정이 있나요?"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <Button
                android:id="@+id/join_btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/clear"
                android:text="로그인"
                android:textColor="@color/percent"
                android:textSize="17sp"
                style="?android:attr/borderlessButtonStyle"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>