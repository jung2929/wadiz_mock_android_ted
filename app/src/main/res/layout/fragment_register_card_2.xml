<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/item_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="66"
        android:progressDrawable="@drawable/progressbar_custom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic"
            android:text="결제 비밀번호 입력"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumbarungothic"
            android:text="안전한 카드 등록을 위해 결제 비밀번호가 필요합니다.\n결제 시 사용할 비밀번호를 입력해주세요."
            android:textColor="@color/gray"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/register_card2_et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:background="@drawable/customborder_sideline"
            android:fontFamily="@font/nanumbarungothic"
            android:hint="- - - - - -"
            android:layout_gravity="center"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"/>


        <Button
            android:id="@+id/register_card2_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/percent"
            android:enabled="false"
            android:fontFamily="@font/nanumbarungothic"
            android:text="다음"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#99ffffff"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>