<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/customborder_sideline"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/category_ib_back"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/clear"
                android:scaleType="centerInside"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:fontFamily="@font/nanumbarungothic"
                android:gravity="center"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/category_ib_home"
                android:layout_width="0dp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/clear"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/customborder_sideline"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_weight="9"
                android:layout_marginLeft="20dp"
                android:id="@+id/category_rv"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/customborder_sideline"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:src="@drawable/category_more"
                android:id="@+id/category_ib_more"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/category_fl_container"/>

    </LinearLayout>
</RelativeLayout>