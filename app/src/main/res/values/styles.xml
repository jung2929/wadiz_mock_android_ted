<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/wadiz</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="tab_home_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>
    <style name="tab_category_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nanumbarungothic</item>
    </style>

</resources>
